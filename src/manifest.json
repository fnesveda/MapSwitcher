{
	"manifest_version": 3,
	"name": "__MSG_extension_name__",
	"description": "__MSG_extension_description__",
	"default_locale": "en",
	"version": "1.0.1",
	"icons": {
		"16":  "icons/icon-16.png",
		"32":  "icons/icon-32.png",
		"48":  "icons/icon-48.png",
		"96":  "icons/icon-96.png",
		"128": "icons/icon-128.png",
		"256": "icons/icon-256.png",
		"480": "icons/icon-full.png"
	},
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": ["*://*.google.com/maps*", "*://*.google.cz/maps*", "*://*.google.sk/maps*"],
			"js": ["scripts/js/utils.js",
				"scripts/js/options.js",
				"scripts/js/urls/common.js",
				"scripts/js/urls/googlemaps.js",
				"scripts/js/urls/mapycz.js",
				"scripts/js/buttons/common.js",
				"scripts/js/buttons/googlemaps.js"
			],
			"css": ["styles/common.css", "styles/googlemaps.css"]
		},
		{
			"matches": ["*://*.mapy.cz/*"],
			"js": ["scripts/js/utils.js",
				"scripts/js/options.js",
				"scripts/js/urls/common.js",
				"scripts/js/urls/googlemaps.js",
				"scripts/js/urls/mapycz.js",
				"scripts/js/buttons/common.js",
				"scripts/js/buttons/mapycz.js"
			],
			"css": ["styles/common.css", "styles/mapycz.css"]
		}
	],
	"options_ui": {
		"page": "pages/options.html",
		"open_in_tab": false
	}
}
