{
	"manifest_version": 2,
	"name": "__MSG_extension_name__",
	"description": "__MSG_extension_description__",
	"default_locale": "en",
	"version": "1.0.1",
	"applications": {
		"gecko": {
			"id": "{0516BC41-6FA3-4326-87FE-7EA9101412FE}"
		}
	},
	"icons": {
		"16":  "icons/icon-16.png",
		"32":  "icons/icon-32.png",
		"48":  "icons/icon-48.png",
		"96":  "icons/icon-96.png",
		"128": "icons/icon-128.png",
		"256": "icons/icon-256.png",
		"480": "icons/icon-full.png"
	},
	"default_icon": {
		"16":  "icons/icon-16.png",
		"32":  "icons/icon-32.png",
		"48":  "icons/icon-48.png",
		"96":  "icons/icon-96.png",
		"128": "icons/icon-128.png",
		"256": "icons/icon-256.png",
		"480": "icons/icon-full.png"
	},
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": ["*://*.google.com/maps*", "*://*.google.cz/maps*", "*://*.google.sk/maps*"],
			"js": ["scripts/js/main.js",
				"scripts/js/options.js",
				"scripts/js/urls/googlemaps.js",
				"scripts/js/urls/mapycz.js",
				"scripts/js/buttons/googlemaps.js"
			],
			"css": ["styles/common.css", "styles/googlemaps.css"]
		},
		{
			"matches": ["*://*.mapy.cz/*"],
			"js": ["scripts/js/main.js",
				"scripts/js/options.js",
				"scripts/js/urls/googlemaps.js",
				"scripts/js/urls/mapycz.js",
				"scripts/js/buttons/mapycz.js"
			],
			"css": ["styles/common.css", "styles/mapycz.css"]
		}
	],
	"background": {
		"scripts": ["scripts/js/background/background.js", "scripts/js/options.js"],
		"persistent": false
	},
	"options_ui": {
		"page": "pages/options.html",
		"chrome_style": true
	}
}
